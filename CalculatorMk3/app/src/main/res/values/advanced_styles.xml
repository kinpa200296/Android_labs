<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdvancedCalculatorBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AdvancedCalculatorButtonBlock">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AdvancedCalculatorButtonBlock.Numbers">
        <item name="android:background">@color/pseudo_cyan</item>
    </style>

    <style name="AdvancedCalculatorButtonBlock.Operations">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="AdvancedCalculatorButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:onClick">onCalculatorButtonClick</item>
    </style>

    <style name="AdvancedCalculatorButton.Number">
        <item name="android:background">@color/pseudo_cyan</item>
    </style>

    <style name="AdvancedCalculatorButton.Operation">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>